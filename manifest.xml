<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
           xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides/1.0"
           xsi:type="MailApp">

  <Id>00000000-0000-0000-0000-000000000001</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Your Organization</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="Artist Calendar Helper" />
  <Description DefaultValue="Enforces the Legacy Crew artist calendar naming standard on Outlook appointments." />
  <IconUrl DefaultValue="https://YOUR_GITHUB_PAGES_URL/assets/icon-32.png" />
  <HighResolutionIconUrl DefaultValue="https://YOUR_GITHUB_PAGES_URL/assets/icon-64.png" />
  <SupportUrl DefaultValue="https://YOUR_GITHUB_PAGES_URL/" />

  <Hosts>
    <Host Name="Mailbox" />
  </Hosts>

  <!-- Need read/write to manage categories, subject, location, time -->
  <Requirements>
    <Sets DefaultMinVersion="1.8">
      <Set Name="Mailbox" />
    </Sets>
  </Requirements>

  <Permissions>ReadWriteMailbox</Permissions>

  <Rule xsi:type="RuleCollection" Mode="Or">
    <!-- Enable on any appointment organizer compose form -->
    <Rule xsi:type="ItemIs" ItemType="Appointment" FormType="Edit" />
  </Rule>

  <DisableEntityHighlighting>false</DisableEntityHighlighting>

  <FormSettings>
    <Form xsi:type="ItemEdit">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://YOUR_GITHUB_PAGES_URL/taskpane.html" />
      </DesktopSettings>
    </Form>
  </FormSettings>

  <PreviewUrls>
    <PreviewUrl>https://YOUR_GITHUB_PAGES_URL/taskpane.html</PreviewUrl>
  </PreviewUrls>

  <VersionOverrides xsi:type="mailappor:VersionOverrides" Version="1.0">
    <mailappor:Requirements>
      <mailappor:Sets DefaultMinVersion="1.8">
        <mailappor:Set Name="Mailbox" />
      </mailappor:Sets>
    </mailappor:Requirements>

    <mailappor:Hosts>
      <mailappor:Host xsi:type="mailappor:Mailbox">
        <mailappor:DesktopFormFactor>
          <mailappor:FunctionFile resid="artistcalendarhelper.functionfile" />

          <mailappor:ExtensionPoint xsi:type="mailappor:AppointmentOrganizerCommandSurface">
            <mailappor:OfficeTab id="TabDefault">
              <mailappor:Group id="artistcalendarhelper.group"
                               label="Artist Calendar Helper">
                <mailappor:Control xsi:type="mailappor:Button"
                                   id="artistcalendarhelper.button"
                                   label="Apply Naming Standard"
                                   icon="icon-32"
                                   onAction="showTaskPane"
                                   superTip="Apply the Legacy Crew calendar naming and category standard." />
              </mailappor:Group>
            </mailappor:OfficeTab>
          </mailappor:ExtensionPoint>

          <mailappor:Resources>
            <mailappor:bt:Images>
              <bt:Image id="icon-32" DefaultValue="https://YOUR_GITHUB_PAGES_URL/assets/icon-32.png" />
              <bt:Image id="icon-64" DefaultValue="https://YOUR_GITHUB_PAGES_URL/assets/icon-64.png" />
            </mailappor:bt:Images>

            <mailappor:bt:Urls>
              <bt:Url id="artistcalendarhelper.taskpane"
                      DefaultValue="https://YOUR_GITHUB_PAGES_URL/taskpane.html" />
              <bt:Url id="artistcalendarhelper.functionfile"
                      DefaultValue="https://YOUR_GITHUB_PAGES_URL/function-file.html" />
            </mailappor:bt:Urls>
          </mailappor:Resources>

        </mailappor:DesktopFormFactor>
      </mailappor:Host>
    </mailappor:Hosts>

    <mailappor:Actions>
      <mailappor:Action xsi:type="mailappor:ShowTaskpane">
        <mailappor:Sources>
          <mailappor:SourceLocation resid="artistcalendarhelper.taskpane" />
        </mailappor:Sources>
        <mailappor:SupportedFormFactors>
          <mailappor:SupportedFormFactor Type="Desktop" />
        </mailappor:SupportedFormFactors>
      </mailappor:Action>

      <mailappor:Action xsi:type="mailappor:ExecuteFunction" FunctionName="showTaskPane">
        <!-- Not actually used in this simple config; left for compatibility -->
      </mailappor:Action>
    </mailappor:Actions>
  </VersionOverrides>
</OfficeApp>
